<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.menu.settings.SettingsViewController">
   <children>
      <ToggleButton fx:id="toggleSoundButton" layoutX="477.0" layoutY="343.0" mnemonicParsing="false" onAction="#toogleSoundHandler" prefHeight="26.0" prefWidth="94.0" text="Sound">
         <font>
            <Font name="Lucida Console" size="12.0" />
         </font>
      </ToggleButton>
      <SplitMenuButton fx:id="screenMenu" layoutX="224.0" layoutY="102.0" mnemonicParsing="false" onAction="#screenMenuHandler" prefHeight="35.0" prefWidth="135.0" text="Screen size">
        <items>
          <MenuItem fx:id="screenSmall" mnemonicParsing="false" onAction="#screenSmallHandler" text="Small" />
          <MenuItem fx:id="screenMedium" mnemonicParsing="false" onAction="#screenMediumlHandler" text="Medium" />
            <MenuItem fx:id="screenLarge" mnemonicParsing="false" onAction="#screenLargelHandler" text="Large" />
        </items>
         <font>
            <Font name="Lucida Console" size="13.0" />
         </font>
      </SplitMenuButton>
      <SplitMenuButton fx:id="difficultyMenu" layoutX="224.0" layoutY="222.0" mnemonicParsing="false" onAction="#difficultyMenuHandler" prefHeight="35.0" prefWidth="135.0" text="Difficulty">
        <items>
          <MenuItem fx:id="difficultyEasy" mnemonicParsing="false" onAction="#difficultyEasyHandler" text="Easy" />
          <MenuItem fx:id="difficultyHard" mnemonicParsing="false" onAction="#difficultyHardHandler" text="Hard" />
        </items>
         <font>
            <Font name="Lucida Console" size="13.0" />
         </font>
      </SplitMenuButton>
      <Button fx:id="backButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButtonHandler" prefHeight="26.0" prefWidth="61.0" text="Back">
         <font>
            <Font name="Lucida Console" size="11.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
