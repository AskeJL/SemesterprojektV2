<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" focusTraversable="true" onKeyPressed="#keyPressedHandler" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controllers.ViewController_Game">
   <children>
      <VBox prefHeight="720.0" prefWidth="1280.0">
         <children>
            <HBox prefHeight="18.0" prefWidth="1280.0">
               <children>
                  <ProgressBar fx:id="progressBarLife" prefHeight="25.0" prefWidth="300.0" progress="0.0">
                     <HBox.margin>
                        <Insets left="50.0" top="5.0" />
                     </HBox.margin>
                  </ProgressBar>
                  <VBox prefHeight="33.0" prefWidth="400.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label fx:id="waveLabel" text="Wave:" />
                              <Label fx:id="waveNumberValue" text="0" />
                           </children>
                           <VBox.margin>
                              <Insets left="100.0" right="100.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Label fx:id="timeLabel" prefHeight="17.0" prefWidth="32.0" text="Time:" />
                              <Label fx:id="waveTimeLabel" text="0" />
                           </children>
                           <VBox.margin>
                              <Insets left="100.0" right="100.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </HBox.margin>
                  </VBox>
                  <ProgressBar fx:id="progressBarOxygen" prefHeight="25.0" prefWidth="300.0" progress="0.0">
                     <HBox.margin>
                        <Insets right="50.0" top="5.0" />
                     </HBox.margin>
                  </ProgressBar>
               </children>
            </HBox>
            <Canvas fx:id="canvasMap" focusTraversable="true" height="540.0" width="900.0">
               <VBox.margin>
                  <Insets left="190.0" />
               </VBox.margin>
            </Canvas>
            <HBox alignment="CENTER" prefHeight="150.0" prefWidth="1280.0">
               <children>
                  <VBox alignment="BOTTOM_LEFT" minWidth="500.0" prefHeight="250.0" prefWidth="640.0">
                     <children>
                        <TextArea fx:id="outputText" editable="false" prefHeight="250.0" prefWidth="640.0" />
                        <TextField fx:id="inputText" onKeyPressed="#enterPressedHandler" />
                     </children>
                  </VBox>
                  <TextArea fx:id="infoText" editable="false" focusTraversable="false" prefHeight="250.0" prefWidth="640.0" wrapText="true">
                     <font>
                        <Font name="Consolas" size="12.0" />
                     </font>
                  </TextArea>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
