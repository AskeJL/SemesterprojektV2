<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="presentation.controllers.ViewController_Menu">
   <children>
      <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" />
      <AnchorPane fx:id="foreground" prefHeight="200.0" prefWidth="200.0" />
      <VBox fx:id="authors" alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="150.0">
         <children>
            <Label fx:id="createdByLabel" prefHeight="20.0" prefWidth="230.0" text="Created by:" />
            <Label fx:id="nameLabel1" prefHeight="20.0" prefWidth="230.0" text="Samuel Bangslund, Nikolaos Pattelakis," />
            <Label fx:id="nameLabel2" prefHeight="20.0" prefWidth="230.0" text="Oliver Pickardt and Aske Lorenz">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1280.0" spacing="20.0">
         <children>
            <Button fx:id="playButton" alignment="CENTER" mnemonicParsing="false" onAction="#onPlayHandler" onMouseEntered="#hover" prefHeight="50.0" prefWidth="220.0" text="Play">
               <font>
                  <Font name="Consolas" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsHandler" onMouseEntered="#hover" prefHeight="50.0" prefWidth="200.0" text="Settings">
               <font>
                  <Font name="Consolas" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="highscoreButton" mnemonicParsing="false" onAction="#onHighScore" onMouseEntered="#hover" prefHeight="50.0" prefWidth="180.0" text="Highscore">
               <font>
                  <Font name="Consolas" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="about" mnemonicParsing="false" onAction="#onAbout" onMouseEntered="#hover" prefHeight="50.0" prefWidth="160.0" text="About">
               <font>
                  <Font name="Consolas" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#onQuitHandler" onMouseEntered="#hover" prefHeight="50.0" prefWidth="140.0" text="Quit">
               <font>
                  <Font name="Consolas" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <padding>
            <Insets top="100.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
