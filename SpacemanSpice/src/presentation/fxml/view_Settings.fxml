<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="presentation.controllers.ViewController_Settings">
   <children>
      <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" />
      <AnchorPane fx:id="foreground" prefHeight="200.0" prefWidth="200.0" />
      <VBox fx:id="authors" alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="150.0">
         <children>
            <Label fx:id="createdByLabel" prefHeight="20.0" prefWidth="230.0" text="Created by:" />
            <Label fx:id="nameLabel1" prefHeight="20.0" prefWidth="230.0" text="Samuel Bangslund, Nikolaos Pattelakis," />
            <Label fx:id="nameLabel2" prefHeight="20.0" prefWidth="230.0" text="Oliver Pickardt and Aske Lorenz">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="450.0" spacing="10.0">
         <children>
            <SplitMenuButton fx:id="screenMenu" mnemonicParsing="false" onAction="#screenMenuHandler" prefHeight="50.0" prefWidth="220.0" text="Screen size">
               <items>
                  <MenuItem fx:id="screenSmall" mnemonicParsing="false" onAction="#screenSmallHandler" text="Small" />
                  <MenuItem fx:id="screenMedium" mnemonicParsing="false" onAction="#screenMediumlHandler" text="Medium" />
                  <MenuItem fx:id="screenLarge" mnemonicParsing="false" onAction="#screenLargelHandler" text="Large" />
               </items>
               <font>
                  <Font name="Lucida Console" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </SplitMenuButton>
            <SplitMenuButton fx:id="difficultyMenu" mnemonicParsing="false" onAction="#difficultyMenuHandler" prefHeight="50.0" prefWidth="220.0" text="Difficulty">
               <items>
                  <MenuItem fx:id="difficultyEasy" mnemonicParsing="false" onAction="#difficultyEasyHandler" text="Easy" />
                  <MenuItem fx:id="difficultyHard" mnemonicParsing="false" onAction="#difficultyHardHandler" text="Hard" />
               </items>
               <font>
                  <Font name="Lucida Console" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </SplitMenuButton>
            <ToggleButton fx:id="toggleSoundButton" mnemonicParsing="false" onAction="#toogleSoundHandler" prefHeight="50.0" prefWidth="200.0" selected="true" text="Sound enabled">
               <font>
                  <Font name="Lucida Console" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ToggleButton>
            <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#backButtonHandler" prefHeight="50.0" prefWidth="180.0" text="Back">
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
