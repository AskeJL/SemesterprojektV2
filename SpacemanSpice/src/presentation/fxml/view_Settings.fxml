<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/gameViewStyleSheet.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="presentation.controllers.SettingsViewController">
   <children>
      <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#backButtonHandler" prefHeight="50.0" prefWidth="250.0" text="Back">
         <font>
            <Font name="Lucida Console" size="11.0" />
         </font>
      </Button>
      <VBox alignment="CENTER" layoutX="415.0" layoutY="160.0" prefHeight="400.0" prefWidth="450.0">
         <children>
            <SplitMenuButton fx:id="screenMenu" mnemonicParsing="false" onAction="#screenMenuHandler" prefHeight="50.0" prefWidth="250.0" text="Screen size">
               <items>
                  <MenuItem fx:id="screenSmall" mnemonicParsing="false" onAction="#screenSmallHandler" text="Small" />
                  <MenuItem fx:id="screenMedium" mnemonicParsing="false" onAction="#screenMediumlHandler" text="Medium" />
                  <MenuItem fx:id="screenLarge" mnemonicParsing="false" onAction="#screenLargelHandler" text="Large" />
               </items>
               <font>
                  <Font name="Lucida Console" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </SplitMenuButton>
            <SplitMenuButton fx:id="difficultyMenu" mnemonicParsing="false" onAction="#difficultyMenuHandler" prefHeight="50.0" prefWidth="250.0" text="Difficulty">
               <items>
                  <MenuItem fx:id="difficultyEasy" mnemonicParsing="false" onAction="#difficultyEasyHandler" text="Easy" />
                  <MenuItem fx:id="difficultyHard" mnemonicParsing="false" onAction="#difficultyHardHandler" text="Hard" />
               </items>
               <font>
                  <Font name="Lucida Console" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </SplitMenuButton>
            <ToggleButton fx:id="toggleSoundButton" mnemonicParsing="false" onAction="#toogleSoundHandler" prefHeight="50.0" prefWidth="250.0" text="Sound">
               <font>
                  <Font name="Lucida Console" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ToggleButton>
         </children>
      </VBox>
   </children>
</AnchorPane>
